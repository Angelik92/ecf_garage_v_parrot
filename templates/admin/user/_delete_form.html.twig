<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Souhaitez vous supprimer l\'utilisateur : {{ user.lastname }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger"><i class="bi bi-person-x-fill"></i> Supprimer</button>
</form>
