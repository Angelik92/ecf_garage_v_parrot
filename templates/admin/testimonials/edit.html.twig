{% extends 'base_db.html.twig' %}

{% block title %}Edit Testimonials{% endblock %}

{% block body %}

    <div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">

        <h1 class="text-light fw-bold" >Modifier avis</h1>

        {% if is_granted('TESTIMONIAL_EDIT', testimonial) %}
            {{ include('admin/testimonials/_form.html.twig', {'button_label': 'Modifier'}) }}
        {% endif %}


        {% if is_granted('TESTIMONIAL_VALIDATE', testimonial) %}
            <table class="table table-primary table-hover table-responsive-md">
                <tr>
                    <th>Client</th>
                    <td>{{ testimonial.client }}</td>
                </tr>
                <tr>
                    <th>Date du service</th>
                    <td>{{ testimonial.dateOfService|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ testimonial.rating }}/5</td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ testimonial.content }}</td>
                </tr>

            </table>
            {{ include('admin/testimonials/_form.html.twig', {'button_label': 'Modifier'}) }}
        {% endif %}

        <a class="btn btn-primary" href="{{ path('testimonials_index') }}"><i class="bi bi-arrow-return-left"></i> Retour Ã  la liste</a>

        {{ include('admin/testimonials/_delete_form.html.twig') }}

    </div>

{% endblock %}
