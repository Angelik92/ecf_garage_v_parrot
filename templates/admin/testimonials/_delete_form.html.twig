
{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('testimonials_delete', {'id': testimonial.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ testimonial.id) }}">
    <button class="btn btn-danger"><i class="bi bi-trash3"></i> Supprimer</button>
</form>
{% endif %}