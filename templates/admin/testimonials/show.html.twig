{% extends 'base_db.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">
        <h1 class="text-light fw-bold" >Avis</h1>

        <table class="table table-primary">
            <tbody>
                <tr>
                    <th>Client</th>
                    <td>{{ testimonial.client }}</td>
                </tr>
                <tr>
                    <th>Date du service</th>
                    <td>{{ testimonial.dateOfService ? testimonial.dateOfService|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ testimonial.rating }}</td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ testimonial.content }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>
                        {% if testimonial.approved == null %}
                            A modérer
                        {% elseif testimonial.approved == 0 %}
                            Refusé
                        {% else %}
                            Validé
                        {% endif  %}
                    </td>
                </tr>
                <tr>
                    <th>Date de mise à jour</th>
                    <td>{{ testimonial.updateAt ? testimonial.updateAt|date('d-m-Y' ) : '' }}</td>
                </tr>
                <tr>
                    <th>{{ include('admin/testimonials/_delete_form.html.twig') }}</th>
                    <td><a class="btn btn-primary" href="{{ path('testimonials_edit', {'id': testimonial.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a></td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('testimonials_index') }}"><i class="bi bi-arrow-return-left"></i> Retour à la liste</a>

    </div>
{% endblock %}
