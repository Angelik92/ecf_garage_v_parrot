{% extends 'base_db.html.twig' %}

{% block title %}Horaires{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">
        <h1 class="text-light fw-bold">Horaires du {{ schedule.day.value }} </h1>

        <table class="table table-primary">
            
                    <th>Matin ou journée sans fermeture</th>
                    <td>{{ schedule.morningSchedule }}</td>
                </tr>
                <tr>
                    <th>Après midi</th>
                    <td>{{ schedule.afternoonSchedule }}</td>
                </tr>
                <tr>
                    <th>Actions</th>
                    <td><a class="btn btn-warning" href="{{ path('schedules_edit', {'id': schedule.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a></td>
                </tr>
              
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('schedules_index') }}"><i class="bi bi-arrow-return-left"></i> Retour à la liste</a>

        

    </div>
{% endblock %}
