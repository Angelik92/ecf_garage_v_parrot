{% extends 'base.html.twig' %}

{% block title %}Schedules index{% endblock %}

{% block body %}
    <h1>Schedules index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Morning_schedule</th>
                <th>Afternoon_schedule</th>
                <th>Day</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.id }}</td>
                <td>{{ schedule.morningSchedule }}</td>
                <td>{{ schedule.afternoonSchedule }}</td>
                <td>{{ schedule.day }}</td>
                <td>
                    <a href="{{ path('schedules_show', {'id': schedule.id}) }}">show</a>
                    <a href="{{ path('schedules_edit', {'id': schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('schedules_new') }}">Create new</a>
{% endblock %}
