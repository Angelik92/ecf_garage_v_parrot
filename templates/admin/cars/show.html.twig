{% extends 'base_db.html.twig' %}

{% block title %}Modèle{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column justify-content-evenly align-items-center text-primary">
        <h1 class="text-light fw-bold">Modèle : {{ car.model | upper }}</h1>

        <table class="table table-primary">
            <tbody>
                <tr>
                    <th>Marque</th>
                    <<td>{{ car.brand.name | upper}}</td>
                </tr>
                <tr>
                    <th>Boite de vitesse</th>
                    <td>{{ car.gearbox.label }}</td>
                </tr>
                <tr>
                    <th>Carburant</th>
                    <td>{{ car.fuel.label }}</td>
                </tr>
                <tr>
                    <th>Puissance</th>
                    <td>{{ car.power }} CH</td>
                </tr>
                <tr>
                    <th> {{ include('admin/cars/_delete_form.html.twig') }}</th>
                    <td><a class="btn btn-primary" href="{{ path('cars_edit', {'id': car.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a></td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('cars_index') }}"><i class="bi bi-arrow-return-left"></i> Retour à la liste</a>

    </div>
{% endblock %}
