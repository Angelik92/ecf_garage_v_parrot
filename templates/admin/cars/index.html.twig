{% extends 'base_db.html.twig' %}

{% block title %}Liste des modèles{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">
        <h1 class="text-light fw-bold">Liste des modèles</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <table class="table table-primary table-hover table-responsive-md">
            <thead>
                <tr>
                    <th>Marque</th>
                    <th>Nom</th>
                    <th>Boite de vitesse</th>
                    <th>Carburant</th>
                    <th>Puissance</th>
                    <<th><a class="btn btn-success" href="{{ path('cars_new') }}"><i class="bi bi-plus-square"></i> Ajouter une marque</a></th>
                </tr>
            </thead>
            <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.brand.name | upper}}</td>
                    <td>{{ car.model | upper }}</td>
                    <td>{{ car.gearbox.label }}</td>
                    <td>{{ car.fuel.label }}</td>
                    <td>{{ car.power }} CH</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('cars_show', {'id': car.id}) }}"><i class="bi bi-pencil-square"></i> Voir</a>
                        <a class="btn btn-primary" href="{{ path('cars_edit', {'id': car.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement n'a été trouvé ! </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
