{% extends 'base_db.html.twig' %}

{% block title %}Liste des modèles{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">
        <h1 class="text-light fw-bold">Liste des modèles</h1>

        {% include 'partials/_messages.html.twig' %}

        <table class="table table-primary table-hover table-responsive-md">
            <thead>
                <tr>
                    <th>Marque</th>
                    <th>Nom</th>
                    <th>Boite de vitesse</th>
                    <th>Carburant</th>
                    <th>Puissance</th>
                    <<th><a class="btn btn-success" href="{{ path('cars_new') }}"><i class="bi bi-plus-square"></i> Ajouter un modéle</a></th>
                </tr>
            </thead>
            <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.brand.name | upper}}</td>
                    <td>{{ car.model | upper }}</td>
                    <td>{{ car.gearbox.label | capitalize }}</td>
                    <td>{{ car.fuel.label | capitalize }}</td>
                    <td>{{ car.power }} CH</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-primary" href="{{ path('cars_show', {'id': car.id}) }}"><i class="bi bi-eye"></i> Voir</a>
                            <a class="btn btn-warning" href="{{ path('cars_edit', {'id': car.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement n'a été trouvé ! </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(cars) }}
        </div>

    </div>
{% endblock %}
