<form method="post" action="{{ path('garages_delete', {'id': garage.id}) }}" onsubmit="return confirm('Souhaitez-vous supprimer le garage : {{ garage.name | upper }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ garage.id) }}">
    <button class="btn btn-danger"><i class="bi bi-trash3"></i> Supprimer</button>
</form>
