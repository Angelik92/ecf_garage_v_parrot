{% extends 'base_db.html.twig' %}

{% block title %}Liste des garages{% endblock %}

{% block body %}
<div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">
    <h1 class="text-light fw-bold">Liste des garages</h1>

    <table class="table table-primary table-hover table-responsive-md">
        <thead>
            <tr>
                <th>Nom du garage</th>
                <th>Adresse</th>
                <th>Code postale</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th><a class="btn btn-success" href="{{ path('garages_new') }}"><i class="bi bi-plus-square"></i> Ajouter un garage</a></th>
            </tr>
        </thead>
        <tbody>
        {% for garage in garages %}
            <tr>
                <td>{{ garage.name }}</td>
                <td>{{ garage.address }}</td>
                <td>{{ garage.zipCode }}</td>
                <td>{{ garage.city | upper}}</td>
                <td>{{ garage.phone }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('garages_show', {'id': garage.id}) }}"><i class="bi bi-eye"></i> Voir</a>
                    <a class="btn btn-primary" href="{{ path('garages_edit', {'id': garage.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement n'a été trouvé !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
