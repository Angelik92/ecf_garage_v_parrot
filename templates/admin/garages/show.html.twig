{% extends 'base_db.html.twig' %}

{% block title %}Garages{% endblock %}

{% block body %}
<div class="container-fluid d-flex flex-column justify-content-evenly align-items-center text-primary">
    <h1 class="text-light fw-bold">Garage</h1>

    <table class="table table-primary">
        <tbody>
            <tr>
                <th>Nom du garage</th>
                <td>{{ garage.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ garage.address }}</td>
            </tr>
            <tr>
                <th>Code postale</th>
                <td>{{ garage.zipCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ garage.city | upper}}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ garage.phone }}</td>
            </tr>
            <tr>
                <th>
                    {{ include('admin/garages/_delete_form.html.twig') }}
                </th>
                <td>
                    <a class="btn btn-primary" href="{{ path('garages_edit', {'id': garage.id}) }}"><i class="bi bi-eye"></i> Voir</a>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('garages_index') }}"><i class="bi bi-arrow-return-left"></i> Retour à la liste</a>

</div>

{% endblock %}
