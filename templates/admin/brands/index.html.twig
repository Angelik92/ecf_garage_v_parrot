{% extends 'base_db.html.twig' %}

{% block title %}Liste des marques{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column align-items-center justify-content-evenly text-primary">
        <h1>Liste des marques</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <table class="table table-primary table-hover table-responsive-md">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th><a class="btn btn-success" href="{{ path('brands_new') }}"><i class="bi bi-plus-square"></i> Ajouter une marque</a></th>
                </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ brand.name | upper}}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('brands_show', {'id': brand.id}) }}"><i class="bi bi-pencil-square"></i> Voir</a>
                        <a class="btn btn-primary" href="{{ path('brands_edit', {'id': brand.id}) }}"><i class="bi bi-pencil-square"></i> Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun enregistrement n'a été trouvé !</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(brands) }}
        </div>

    </div>

{% endblock %}
