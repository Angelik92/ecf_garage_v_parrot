<form method="post" action="{{ path('brands_delete', {'id': brand.id}) }}" onsubmit="return confirm('Souhaitez-vous supprimer la marque : {{ brand.name | upper}}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
    <button class="btn btn-danger"><i class="bi bi-trash3"></i> Supprimer</button>
</form>
