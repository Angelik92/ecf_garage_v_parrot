{% extends 'base2.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <main class= "container mt-5 d-flex flex-column align-items-center">
        <h1 class="fw-bold">Services</h1>
        {% for service in services %}
            <article class="card border-primary my-3 ">
                <div class="row g-0">
                    <div class="col-md-2">
                        <img src="/uploads/{{ service.pictureFile.getPath() }}" class="service_img rounded-start" alt="...">
                    </div>
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column  h-100  ">
                            <h3 class="fw-bolder text-primary">{{ service.title | upper}}</h3>
                            <p class="card-text text-secondary text-justify">{{ service.description }}</p>
                            <p class="text-center text-primary"> {% if service.price != null %}
                                    A partir de : {{ service.price }} â‚¬
                                {% else %}
                                    Sur devis
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </article>                                           
        {% endfor %}
            <a href="#" class="btn btn-primary my-5">Demande d'information</a>
    </main>
{% endblock %}



