{{ form_start(form, { 'attr': {'class': ' text-tertiary p-5'} }) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.title) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.firstname) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.phoneNumber) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.customerEmail) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ form_row(form.subject) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ form_row(form.message) }}
        </div>
    </div>

    <button class="btn btn-success"><i class="bi bi-envelope-arrow-up"></i> {{ button_label|default('Envoyer') }}</button>

{{ form_end(form) }}