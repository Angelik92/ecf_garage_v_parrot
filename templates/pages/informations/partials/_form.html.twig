{{ form_start(form, { 
    'attr': {'class': 'bg-secondary bg-opacity-75 rounded-4 text-tertiary p-5', 
            'id': 'form-informations'}}) }}

    <div class="row">
        <h3 class="text-center mb-5">Demande d'information</h3>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_row(form.service) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastname) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.phoneNumber) }}
        </div>
    </div>

     <div class="row">
        <div class="col-12">
            {{ form_row(form.customerEmail) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ form_row(form.subject) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-5">
            {{ form_row(form.message) }}
        </div>
    </div>

    <button class="btn btn-success"><i class="bi bi-envelope-arrow-up"></i> {{ button_label|default('Envoyer') }}</button>

{{ form_end(form) }}