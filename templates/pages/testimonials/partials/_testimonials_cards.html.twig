{% for testimonial in testimonials %}
    <div class="col-12 col-md-6 col-lg-4 g-2">
        <div class="card border border-2 border-secondary rounded-4 w-100 h-100">
            <div class="row g-0 h-100">
                <div class="col-4 d-flex flex-column align-items-center justify-content-evenly bg-secondary  text-tertiary rounded-start-4 h-100">
                    <h3 class="fs-3 fw-bold mt-2">{{ testimonial.client | capitalize }}</h3>
                    <p class="fs-3 p-3">{% if testimonial.service.title == 'Service1' %}
                            <i class="bi bi-car-front-fill"></i>
                        {% else  %}
                            <i class="bi bi-tools"></i>
                        {% endif %}
                    </p>
                    <p>{{ testimonial.dateofservice | date('d-m-Y')}}</p>
                    <p>{{ testimonial.rating }}</p>
                </div>
                <div class="col-8 ">
                    <div class="card-body bg-tertiary h-100 w-100 rounded-end-4">
                        <h4 class="card-title text-secondary fs-4 fw-bold">
                            {% if testimonial.service.title == 'Service1' %}
                                Achat de véhicule
                            {% else  %}
                                Réparation
                            {% endif %}
                        </h4>
                        <p class="card-text text-secondary fst-italic">"{{ testimonial.content }}"</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}