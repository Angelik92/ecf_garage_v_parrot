
<!-- Loop through each testimonial in the 'testimonials' collection -->
{% for testimonial in testimonials %}
    <div class="col-12 col-md-6 col-lg-4 g-2">

        <article class="card border border-2  w-100 h-100 js-testimonial">
            <div class="row g-0 h-100">
                <div class="col-4 d-flex flex-column align-items-center justify-content-evenly bg-primary  text-tertiary rounded-start-4 h-100">

                    <!-- Client's name -->
                    <h3 class="fs-5 fw-bold mt-2">
                        {{ testimonial.client | capitalize }}
                    </h3>

                    <!-- Display a car icon if the service title is 'Achat' -->
                    <p class="fs-3 p-3">
                        {% if testimonial.service.title == 'Achat' %}
                            <i class="bi bi-car-front-fill"></i>

                            <!-- Display a tools icon for other service titles -->
                        {% else  %}
                            <i class="bi bi-tools"></i>
                        {% endif %}
                    </p>

                    <!-- Display the date of service -->
                    <p>{{ testimonial.dateofservice | date('d-m-Y')}}</p>

                    <p class=" text-tertiary js-rating-client" data-rating="{{ testimonial.rating }}">
                        {% for i in 1..5 %}
                            <i class="bi bi-star js-star-show-rating {% if i <= testimonial.rating %}bi-star-fill{% endif %}" data-value="{{ i }}"></i>
                        {% endfor %}
                    </p>
                </div>

                <!-- Card body-->
                <div class="col-8 ">
                    <div class="card-body bg-secondary h-100 w-100 rounded-end-4">

                        <!-- Title service -->
                        <h4 class="card-title text-tertiary fs-4 fw-bold">
                            <!-- Display 'Achat de véhicule' if the service title is 'Achat' -->
                            {% if testimonial.service.title == 'Achat' %}
                                Achat de véhicule
                            <!-- Display 'Entretien véhicule' for other service titles -->
                            {% else  %}
                                Entretien véhicule
                            {% endif %}
                        </h4>

                        <!-- Display the testimonial content in italics -->
                        <p class="card-text text-tertiary fst-italic">"{{ testimonial.content }}"</p>
                    </div>
                </div>
            </div>
        </article>
    </div>
{% endfor %}